{
    "variables": {
        "activation_deploy_token": "{{ env `ACTIVATION_DEPLOY_TOKEN` }}"
    },

    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-west-2",
            "source_ami": "ami-bd8f33c5",
            "instance_type": "m4.large",
            "ssh_username": "ubuntu",
            "ami_name": "eos-activation-server_{{ isotime \"2006-01-02_1504\" }}",
            "ami_description": "EOS Activation Server",
            "tags": {
                "Name": "eos-activation-server_{{ isotime \"2006-01-02_1504\" }}",
                "Group": "metrics"
            },
            "associate_public_ip_address": true
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": "sudo apt-get update && sudo apt-get install -y ansible"
        },
        {
            "type": "ansible-local",
            "playbook_file": "./packer/main.yml",
            "playbook_dir": "./packer",
            "extra_arguments": [ "--extra-vars \"activation_deploy_token={{user `activation_deploy_token`}}\"" ]
        }
    ]
}

